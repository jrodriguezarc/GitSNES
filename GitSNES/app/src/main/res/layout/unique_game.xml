<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:scrollbarAlwaysDrawVerticalTrack="true">

    <TextView
        android:id="@+id/Uni_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="60dp"
        android:textColor="#000000"
        android:text="titulo"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/Uni_category" />

        <TextView
        android:id="@+id/Uni_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="30dp"
        android:layout_below="@+id/Uni_name"
        android:text="categoria"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp" />

    <TextView
        android:id="@+id/Uni_decription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#000000"
        android:textSize="35sp"
        android:text="descripcion"
        android:layout_weight="0.36"
        android:layout_below="@+id/Uni_category"
        android:layout_margin="20dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:id="@+id/uniqplayer"
        android:layout_below="@+id/Uni_decription"
        android:background="@drawable/nintendo">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:id="@+id/mainplayer"></LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"></LinearLayout>


        <ImageView
            android:layout_width="180dp"
            android:layout_height="180dp"
            android:id="@+id/Uni_img_game"
            android:src="@drawable/game"
            android:layout_toStartOf="@+id/Uni_decription"
            android:layout_gravity="center_horizontal"
            android:layout_alignTop="@+id/Uni_name"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="25dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="75dp"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Video"
            android:id="@+id/btn_video"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="115dp"
            android:onClick="goVideo"
            android:src="@drawable/gameplay"
            />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_down"
            android:src="@drawable/download"
            android:onClick="download"
            android:layout_below="@+id/btn_video"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp"
            />









        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imgurl"
            android:text="sd"
            android:layout_gravity="right"
            android:textSize="0dp"
            android:textColor="#0099cc"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/fileurl"
            android:text="s"
            android:layout_gravity="right"
            android:textSize="0dp"
            android:textColor="#0099cc"/>



    </LinearLayout>


</RelativeLayout>