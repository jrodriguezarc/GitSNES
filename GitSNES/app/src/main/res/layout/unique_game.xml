<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/Uni_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="72dp"
        android:textColor="#008500"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Uni_category"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#299926"
        android:textSize="52sp"
        android:layout_below="@+id/Uni_name"
        android:layout_centerHorizontal="true" />

    <TextView
        android:id="@+id/Uni_decription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#67E667"
        android:textSize="42sp"
        android:layout_below="@+id/Uni_category"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Uni_img_game"
        android:src="@drawable/game"
        android:layout_toStartOf="@+id/Uni_decription"
        android:layout_below="@+id/Uni_decription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>